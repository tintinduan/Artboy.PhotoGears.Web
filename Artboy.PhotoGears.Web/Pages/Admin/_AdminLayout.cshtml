<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artboy.PhotoGears.Web</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="bg-info text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <span class="navbar-brand ml-2">Photo Gears Administration</span>
                </div>
                <div class="col-2 text-right">
                    <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row row-cols-5 bg-primary">
            <a class="col text-white fa-link"
               href="/admin/cameras">
                Cameras
            </a>
            <a class="col text-white "
               href="/admin/lenses">
                Lenses
            </a>
            <a class="col text-white"
               href="/admin/accessories">
                Accessories
            </a>
            <a class="col text-white"
               href="/admin/mounts">
                Lens Mounts
            </a>
            <a class="col text-white"
               href="/admin/images">
                Images
            </a>
        </div>
        <div class="row">
            @RenderBody()
        </div>
    </div>
</body>
</html>