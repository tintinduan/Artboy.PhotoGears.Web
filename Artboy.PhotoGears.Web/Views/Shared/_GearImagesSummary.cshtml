@model PhotoGear
    <style>
        .carousel-indicators li {
            width: 10px;
            height: 10px;
            border-radius: 100%;
        }
    </style>
    <h1 class="bg-dark text-white text-center">
        <span>Pictures</span>
    </h1>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-auto">
                <div id="imageCarousel" class="carousel slide" data-wrap="true">

                    <ol class="carousel-indicators">
                        @{
                            var first = true;
                        }
                        @if (Model.Images.Count() > 0)
                        {
                            int i = 1;

                            @foreach (var img in Model.Images)
                            {
                                <li data-target="#imageCarousel" data-slide-to="@i" class="@(first ? Html.Raw("active") : Html.Raw("")) carousel-fade"></li>
                                i++;
                                first = false;
                            }
                        }
                    </ol>

                    <div class="carousel-inner">
                        @{
                            var isFirst = true;
                        }
                        @if (Model.Images.Count() > 0)
                        {
                            @foreach (var img in Model.Images)
                            {
                                <div class="carousel-item @(isFirst ? Html.Raw("active") : Html.Raw(""))">

                                    <img src="@img.ImageUrl" class="img-responsive" width="700">

                                    <div class="carousel-caption">
                                        @img.Title
                                    </div>
                                </div>
                                isFirst = false;
                            }
                        }
                    </div>

                    <a href="#imageCarousel" class="carousel-control-prev" data-slide="prev" role="button">
                        <span class="fas fa-arrow-alt-circle-left fa-3x" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a href="#imageCarousel" class="carousel-control-next" data-slide="next" role="button">
                        <span class="fas fa-arrow-alt-circle-right fa-3x" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>